---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
---
<MainLayout>
    <section class="max-w-[1000px] h-[80vh] md:h-[95vh] mx-auto flex place-content-center flex-col  md:flex md:flex-row ">
        <article class="md:self-center order-2  p-xs py-sm">
            <h1 class="text-center md:text-left">Tak for din bestilling!</h1>
            <p class="pb-xs text-center md:text-left ">
                Lige om lidt vil du få en ordrebekræftelse sendt til dinmail@email.com. 
                Vi glæder os til du får pakken. Kan du ikke vente? 
                Har vi også strakslevering, som du kan <span class="underline cursor-pointer"> tilføje her</span>.
            </p>
            <div class="flex justify-center md:justify-start">
                 <Button variant="stroke">Vis ordrebekræftelse </Button>
            </div>
           
        </article>
        <section class="h-[50%] -mb-sm md:mb-0 w-full md:h-full md:w-full  self-center flex justify-center ">
            <article class="mx-auto aspect-544/825 kasse self-center justify-center bg-contain bg-no-repeat bg-center">
            </article>
             </section>
    </section>

</MainLayout>
<style>
        @keyframes kasse_kf {
        0% {
            background-image: url(/kasse1.svg);
        }
        8% {
            background-image: url(/kasse2.svg);
        }

        16% {
            background-image: url(/kasse3.svg);
        }

        24% {
            background-image: url(/kasse4.svg);
        }

        32% {
            background-image: url(/kasse5.svg);
        }
        40% {
            background-image: url(/kasse6.svg);
        }
        48% {
            background-image: url(/kasse7.svg);
        }
        56% {
            background-image: url(/kasse8.svg);
        }
        64% {
            background-image: url(/kasse9.svg);
        }
        72% {
            background-image: url(/kasse10.svg);
        }
        85% {
            background-image: url(/kasse11.svg);
        }
        100% {
            background-image: url(/kasse12.svg);
        }
        }

        .kasse {
            height: 80%;
            width: 80%;
        animation-name: kasse_kf;
        animation-timing-function: step-end;
        animation-duration: 8s;
        animation-delay: 0s;
        animation-iteration-count: infinite;
        }
</style>